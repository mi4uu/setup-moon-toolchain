{
  "name": "@mi4uu/setup-moon-toolchain",
  "version": "0.3.3",
  "description": "A GitHub action to setup and cache the proto and moon toolchains. BUNIFIED",
  "main": "dist/index.js",
  "scripts": {
    "build:post":"bun build --entrypoints ./post.ts --outfile ./dist/post/index.js --target node --minify",
    "build:index":"bun build --entrypoints ./index.ts --outfile ./dist/index.js --target node --minify",
    "build:post:bun":"bun build --entrypoints ./post.ts --outfile ./dist/post/index_bun.js --target bun --bytecode",
    "build:index:bun":"bun build --entrypoints ./index.ts --outfile ./dist/index_bun.js --target bun --bytecode",
    "build": "bun run build:index && bun run build:post",
    "build:bun": "bun run build:index:bun && bun run build:post:bun",
    "check": "bun run lint && bun run test && bun run typecheck",
    "deps": "bun update --latest --interactive",
    "lint": "eslint --ext .ts,.js --fix .",
    "test": "echo 'Not yet'",
    "test:input": "bun run ./index.ts",
    "typecheck": "tsc --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mi4uu/setup-moon-toolchain"
  },
  "author": "Michal Lipinski",
  "license": "MIT",
  "dependencies": {
    "@actions/cache": "4.0.0",
    "@actions/core": "^1.11.1",
    "@actions/glob": "^0.5.0",
    "@actions/tool-cache": "^2.0.1"
  },
  "devDependencies": {
    "@types/bun": "^1.1.14",
    "eslint": "^9.17.0",
    "eslint-config-moon": "^3.1.3",
    "prettier": "^3.4.2",
    "prettier-config-moon": "^1.1.2",
    "tsconfig-moon": "^1.3.0",
    "typescript": "^5.7.2"
  },
  "engines": {
    "bun": ">=1.1.42"
  }
}
