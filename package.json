{
	"name": "@mi4uu/setup-moon-toolchain",
	"version": "0.0.1",
	"type": "module",
	"description": "A GitHub action to setup and cache the proto and moon toolchains. BUNIFIED",
	"main": "dist/run-index.js",
	"scripts": {
		"build": "bun run ./build.sh",
		"build:bun": "bun run build:index:bun && bun run build:post:bun",
		"check:ci": "biome ci --vcs-enabled=true --vcs-use-ignore-file=true",
		"check": "bun run lint && bun run test && bun run typecheck",
		"deps": "bun update --latest --interactive",
		"lint": "biome lint --write ",
		"format": "biome format --write",
		"test": "echo 'Not yet'",
		"test:input": "bun run ./index.ts",
		"typecheck": "tsc --noEmit"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/mi4uu/setup-moon-toolchain"
	},
	"author": "Michal Lipinski",
	"license": "MIT",
	"dependencies": {
		"@actions/cache": "4.0.0",
		"@actions/core": "^1.11.1",
		"@actions/exec": "^1.1.1",
		"@actions/glob": "^0.5.0",
		"@actions/tool-cache": "^2.0.1"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@types/bun": "^1.1.14",
		"tsconfig-moon": "^1.3.0",
		"typescript": "^5.7.2"
	},
	"engines": {
		"bun": ">=1.1.42"
	},
	"trustedDependencies": ["@biomejs/biome"]
}
